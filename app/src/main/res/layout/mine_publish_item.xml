<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/pub_task_ID"/>
    <TextView
        android:id="@+id/pub_type"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:text="类型"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/pub_type_text"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/pub_type"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pub_location"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="@string/TR_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_type"/>

    <TextView
        android:id="@+id/pub_location_detail"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/pub_location"
        app:layout_constraintTop_toTopOf="@id/pub_type_text" />

    <TextView
        android:id="@+id/pub_task_time"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:text="时间"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_type"/>

    <TextView
        android:id="@+id/pub_task_time_detail"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/pub_task_time"
        app:layout_constraintTop_toTopOf="@id/pub_location_detail" />

    <TextView
        android:id="@+id/pub_content"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:text="内容"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_type"/>

    <TextView
        android:id="@+id/pub_content_detail"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/pub_content"
        app:layout_constraintTop_toTopOf="@id/pub_task_time_detail" />


    <TextView
        android:id="@+id/pub_status"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="120dp"
        android:background="#FFFFFF"
        android:text="@string/recipient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_type"/>

    <TextView
        android:id="@+id/pub_status_detail"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/pub_recipient"
        app:layout_constraintTop_toTopOf="@id/pub_content_detail" />
    <TextView
        android:id="@+id/pub_recipient"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="140dp"
        android:background="#FFFFFF"
        android:text="@string/finish_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_type"/>

    <TextView
        android:id="@+id/pub_recipient_detail"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/pub_recipient"
        app:layout_constraintTop_toTopOf="@id/pub_content_detail" />
    <TextView
        android:id="@+id/pub_review"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="160dp"
        android:background="#FFFFFF"
        android:text="审核状态"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_type"/>

    <TextView
        android:id="@+id/pub_review_detail"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/pub_review"
        app:layout_constraintTop_toTopOf="@id/pub_content_detail" />

    <Button
        android:id="@+id/pub_chat_with_task_sponsor"
        android:text="确认完成"
        android:background="@drawable/btn_circle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_content_detail" />

    <Button
        android:id="@+id/pub_accept_task"
        android:text="删除"
        android:background="@drawable/btn_circle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pub_content_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>